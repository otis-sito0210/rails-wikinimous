<%= form_with model: article, html: { class: "modern-form" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter the title" %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 5, placeholder: "Enter the content" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary mt-2" %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-auto">
      <%= link_to "Back to articles", articles_path, class: "btn btn-secondary btn-sm mt-3" %>
    </div>
  </div>
</div>
